@page "/signup"
@model RegisterModel


    <div class="container h-100">
        <div class="row h-100">
            <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
                <div class="d-table-cell align-middle">

                    <!--<div class="text-center mt-4">-->
                    <!-- </div> -->

                    <div class="card">
                        <div class="card-body">
                            <div class="m-sm-4">
                                <img id="logoFitstic" class="img-thumbnail" src="https://www.fitstic.it/assets/65dea26ae59afd62ec61fbe2b597da45/img/logo.jpg" />
                                <h1 class="h2">REGISTRAZIONE </h1>
                                <p class="lead">
                                    Riservato agli operatori FITSTIC
                                </p>
                                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">                                    
                                    <div class="form-group">
                                        <label>Nome</label>
                                        <input class="form-control form-control-lg" type="text" name="name" placeholder="Inserisci il nome">
                                        <span asp-validation-for="Input.Nome" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label>Cognome</label>
                                        <input class="form-control form-control-lg" type="text" name="surname" placeholder="Inserisci il cognome">
                                        <span asp-validation-for="Input.Cognome" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input class="form-control form-control-lg" type="email" name="email" placeholder="Inserisci l'indirizzio email" asp-for="Input.Email">
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label>Cellulare</label>
                                        <input class="form-control form-control-lg" type="number" name="telefono" placeholder="Digita il numero di telefono">
                                        <span asp-validation-for="Input.NumCell" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input class="form-control form-control-lg" type="password" name="password" placeholder="Digita una password" asp-for="Input.Password">
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="text-center mt-3">
                                        <button class="btn btn-lg btn-primary" type="submit">CONFERMA</button>
                                        <button type="button" class="btn btn-lg btn-primary" href="signup">Indietro</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
