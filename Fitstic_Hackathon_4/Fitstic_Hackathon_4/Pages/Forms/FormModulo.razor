@page "/form-modulo"
@page "/form-modulo{id:int}"
@using Fitstic_Hackathon_4.Data
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext db
@inject NavigationManager NavigationManager


<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css" rel="stylesheet" type="text/css" />

<EditForm Model="mod" OnValidSubmit="() => SalvaModulo()">
    <DataAnnotationsValidator />

    <div class="container">
        <div id="accordion">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center">
                        @if (Id == 0)
                        {
                            <h3>Inserimento NUOVO CORSO</h3>
                        }
                        else
                        {
                            <h3>Modifica CORSO</h3>
                        }

                    </div>
                </div>
            </div>

            <br />

            <div class="card card-default">
                <div class="card-header">
                    <h4 class="card-title">
                        <a data-toggle="collapse" data-parent="#accordion">
                            <i class="glyphicon glyphicon-search text-gold"></i>
                            <b>INFO</b>
                        </a>
                    </h4>
                </div>
                <div id="collapse1" class="collapse show">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 col-lg-4">
                                <div class="form-group">
                                    <label class="control-label">NOME</label>
                                    <input type="text" class="form-control" id="inputNomePart" @bind-value="mod.Nome" />
                                </div>
                            </div>
                            <div class="col-md-1 col-lg-4">
                                <div class="form-group">
                                    <label class="control-label">MATERIA</label>
                                    <input type="text" class="form-control" id="inputCognomePers" @bind-value="mod.Materia" />
                                </div>
                            </div>


                            <br />
                            <div class="col-md-2 col-lg-3">
                                <div class="form-group">
                                    <label class="control-label">DATA INIZIO</label>
                                    <input type="date" class="form-control" id="inpDatInizoCorso" @bind-value="mod.DataInizio" />
                                </div>
                            </div>
                            <div class="col-md-2 col-lg-3">
                                <div class="form-group">
                                    <label class="control-label">DATA FINE</label>
                                    <input type="date" class="form-control" id="ipnDataFineCorso" @bind-value="mod.DataFine" />
                                </div>
                            </div>

                            <div class="col-md-3 col-lg-4">
                                <div class="form-group">
                                    <label class="control-label">DOCENTE</label>
                                    <select class="form-control" @bind="mod.DocenteId">
                                        @foreach (var d in docenti)
                                        {
                                            <option value="@d.Id"> @d.Nome @d.Cognome</option>
                                        }

                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3 col-lg-4">
                                <div class="form-group">
                                    <label class="control-label">TUTOR</label>
                                    <select class="form-control" @bind="mod.TutorId">
                                        @foreach (var t in tutors)
                                        {
                                            <option value="@t.Id"> @t.Nome @t.Cognome</option>
                                        }

                                    </select>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card card-default">
            <div class="card-header">
                <h4 class="card-title">
                    <a data-toggle="collapse" data-parent="#accordion">
                        <i class="glyphicon glyphicon-lock text-gold"></i>
                        <b>MODULI</b>
                    </a>
                </h4>
            </div>
        </div>
        <div class="card card-default">
            <div class="card-header">
                <h4 class="card-title">
                    <a data-toggle="collapse" data-parent="#accordion">
                        <i class="glyphicon glyphicon-lock text-gold"></i>
                        <b>PARTECIPANTI</b>
                    </a>
                </h4>
            </div>
        </div>
        <br />
    </div>

    <!--COMMAND BUTTONS-->

    <div class="row">
        <div class="col-lg-12">
            <div class="pull-right">
                <button type="submit" class="btn btn-success btn-lg" id="btnSubmit"><i class="fa fa-save"></i> Salva</button>
                <a class="btn btn-warning btn-lg" href="moduli" id="btnToTop"><i class="fa fa-arrow-left" href="operatori"></i> Indietro</a>
            </div>
        </div>
    </div>

</EditForm>

<br />
<br />
<br />




@code {

    [Parameter]
    public int Id { get; set; }

    public Modulo mod { get; set; }

    public Docente[] docenti;
    public Tutor[] tutors;

    protected override async Task OnInitializedAsync()
    {
        docenti = await db.TabDocenti
             .OrderBy(x => x.Cognome)
             .ToArrayAsync();

        tutors = await db.TabTutor
             .OrderBy(x => x.Cognome)
             .ToArrayAsync();


        if (Id == 0)
        {
            //istanza nuovo modulo
            mod = new Modulo();
        }
        else
        {
            //trova record in tab db
            mod = await db.TabModuli.FindAsync(Id);
        }

    }


    private async void SalvaModulo()
    {
        if (Id == 0)
        {
            //inserimento nuovo record
            db.TabModuli.Add(mod);
            await db.SaveChangesAsync();

        }
        else
        {
            //aggiornamento dati di un record esistente
            await db.SaveChangesAsync();
        }

        NavigationManager.NavigateTo("/moduli");

    }
}
