@page "/operatori"
@using Fitstic_Hackathon_4.Data;
@using Microsoft.EntityFrameworkCore;
@inject ApplicationDbContext db

<h1> PERSONALE </h1>

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

<!------ Include the above in your HEAD tag ---------->

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />

<a class="button btn btn-primary btn-lg" href="form-personale"> NUOVO </a>
<br />
<br />

<div class="container">
    <div id="accordion">
        <div class="card card-default">
            <div class="card-header btn-link">
                <h4 class="card-title">
                    <a data-toggle="collapse" data-parent="#accordion" @onclick="e => this.Collapsed1 = !this.Collapsed1 ">
                        @( this.Collapsed1 ? "" : "" )
                        <i class="glyphicon glyphicon-search text-gold"></i>
                        <b>DOCENTI</b>
                    </a>
                </h4>
            </div>
            <div id="collapseDocenti" class="@(Collapsed1? "collapse": "" )">
                <div class="col-12 col-sm-12 col-md-12">
                    <div class="card-body" >
                        <div class="row">
                            <!--TABELLA DOCENTI INIZIO-->
                            <!--TABELLA DOCENTI INIZIO-->
                            <div class="table-responsive" id="tabDoc" tabindex="2" style="height: 400px; overflow: hidden; outline: none;">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Nome Cognome</th>
                                            <th>Data Assunzione</th>
                                            <th>Telefono</th>
                                            <!--INFO MODULI*-->
                                            <th>Edit</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var doc in all_docenti)
                                        {
                                            <tr>
                                                <td id="idDocente">
                                                    @doc.Id
                                                </td>
                                                <td id="nomeDocente">
                                                    <b> @doc.Nome  @doc.Cognome </b>
                                                </td>
                                                <td id="dataAssDoc">
                                                    @doc.DataAssunzione.ToShortDateString()
                                                </td>
                                                <td id="telDoce">
                                                    @doc.NumTelefono
                                                </td>
                                                <td>
                                                    <a data-toggle="tooltip" title="" data-original-title="Edit" href="form-personale/@doc.Id/docente"><i class="fas fa-pencil-alt"></i></a>
                                                    <a data-toggle="tooltip" title="" data-original-title="Delete"><i class="far fa-trash-alt"></i></a>
                                                </td>

                                            </tr>

                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!--TABELLA DOCENTI FINE-->
                <!--TABELLA DOCENTI FINE-->

            </div>
        </div>

        <!--CARD ORGANIZZATORI-->
        <!--CARD ORGANIZZATORI-->

        <div class="card card-default">
            <div class="card-header">
                <h4 class="card-title btn-link">
                    <a data-toggle="collapse" data-parent="#accordion" @onclick="e => this.Collapsed2 = !this.Collapsed2 ">
                        @( this.Collapsed2 ? "" : "" )
                        <i class="glyphicon glyphicon-lock text-gold"></i>
                        <b>ORGANIZZATORI</b>
                    </a>
                </h4>
            </div>
            <div id="collapseOrg" class="@(Collapsed2? "collapse": "" )">
                <div class="card-body">
                    <div class="row">
                        <!--TABELLA ORGANIZZATORI-->
                        <!--TABELLA ORGANIZZATORI-->
                        <div class="table-responsive" id="tableOrg" tabindex="2" style="height: 400px; overflow: hidden; outline: none;">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Nome Cognome</th>
                                        <th>Data Assunzione</th>
                                        <th>Telefono</th>
                                        <!--INFO MODULI*-->
                                        <th>Edit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var org in all_organizzatori)
                                    {
                                        <tr>
                                            <td id="idDocente">
                                                @org.Id
                                            </td>
                                            <td id="nomeDocente">
                                                <b> @org.Nome  @org.Cognome </b>
                                            </td>
                                            <td id="dataAssDoc">
                                                @org.DataAssunzione.ToShortDateString()
                                            </td>
                                            <td id="telDoce">
                                                @org.NumTelefono
                                            </td>
                                            <td>
                                                <a data-toggle="tooltip" title="" data-original-title="Edit" href="form-personale/@org.Id/organizzatore"><i class="fas fa-pencil-alt"></i></a>
                                                <a data-toggle="tooltip" title="" data-original-title="Delete"><i class="far fa-trash-alt"></i></a>
                                            </td>

                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--CARD TUTOR-->
        <!--CARD TUTOR-->

        <div class="card card-default">
            <div class="card-header">
                <h4 class="card-title btn-link">
                    <a data-toggle="collapse" data-parent="#accordion" @onclick="e => this.Collapsed3 = !this.Collapsed3 ">
                        @( this.Collapsed3 ? "" : "" )
                        <i class="glyphicon glyphicon-lock text-gold"></i>
                        <b>TUTOR</b>
                    </a>
                </h4>
            </div>
            <div id="collapseTutor" class="@(Collapsed3? "collapse": "" )">
                <div class="card-body">
                    <div class="row">
                        <!--TABELLA TUTOR-->
                        <!--TABELLA TUTOR-->
                        <div class="table-responsive" id="tableTutor" tabindex="2" style="height: 400px; overflow: hidden; outline: none;">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Nome Cognome</th>
                                        <th>Data Assunzione</th>
                                        <th>Telefono</th>
                                        <!--INFO MODULI*-->
                                        <th>Edit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var tutor in all_tutor)
                                    {
                                        <tr>
                                            <td id="idTutor">
                                                @tutor.Id
                                            </td>
                                            <td id="nomeTutor">
                                                <b> @tutor.Nome  @tutor.Cognome </b>
                                            </td>
                                            <td id="dataAssTutor">
                                                @tutor.DataAssunzione.ToShortDateString()
                                            </td>
                                            <td id="telTutor">
                                                @tutor.NumTelefono
                                            </td>
                                            <td>
                                                <a data-toggle="tooltip" title="" data-original-title="Edit" href="form-personale/@tutor.Id/Tutor"><i class="fas fa-pencil-alt"></i></a>
                                                <a data-toggle="tooltip" title="" data-original-title="Delete"><i class="far fa-trash-alt"></i></a>
                                            </td>

                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
   </div>

@code{

    [Parameter]
    public bool Collapsed1 { get; set; } = true;
    public bool Collapsed2 { get; set; } = true;
    public bool Collapsed3 { get; set; } = true;

    private Organizzatore[] all_organizzatori;
    private Docente[] all_docenti;
    private Tutor[] all_tutor;

    protected override async Task OnInitializedAsync()
    {
        all_organizzatori = await db.TabOrganizzatori
            .OrderBy(y => y.Cognome)
            .ToArrayAsync();

        all_docenti = await db.TabDocenti
            .OrderBy(x=>x.Cognome)
            .ToArrayAsync();

        all_tutor = await db.TabTutor
            .OrderBy(k => k.Cognome)
            .ToArrayAsync();



    }

}
