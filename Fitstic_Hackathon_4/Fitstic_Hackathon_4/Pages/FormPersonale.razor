<EditForm>
    <div class="container">
        <div id="accordion">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center">
                        <h3>Inserimento / Modifica PERSONALE</h3>
                    </div>
                </div>
            </div>

            <div id="radioButtonTipoInserimPersonale">
                <p class="lead">Seleziona la tipologia di inserimento</p>
                <div class="form-check">
                    <input name="gruppo1" type="radio" id="selOrg">
                    <label for="radio2">ORGANIZZATORE</label>
                </div>
                <div class="form-check">
                    <input name="gruppo1" type="radio" id="selDocente" checked>
                    <label for="radio1">DOCENTE</label>
                </div>
                <div class="form-check">
                    <input name="gruppo1" type="radio" id="selTutor">
                    <label for="radio2">TUTOR</label>
                </div>
            </div>
            
            <br />

            <div class="card card-default">
                <div class="card-header">
                    <h4 class="card-title">
                        <a data-toggle="collapse" data-parent="#accordion">
                            <i class="glyphicon glyphicon-search text-gold"></i>
                            <b>DATI ANAGRAFICI</b>
                        </a>
                    </h4>
                </div>
                <div id="collapse1" class="collapse show">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 col-lg-4">
                                <div class="form-group">
                                    <label class="control-label">NOME</label>
                                    <!--Campo x modifica dato o disponibile per nuovo inserimento-->
                                    <input type="text" class="form-control" id="inputNomePart"  />
                                </div>
                            </div>
                            <div class="col-md-1 col-lg-4">
                                <div class="form-group">
                                    <label class="control-label">COGNOME</label>
                                    <input type="text" class="form-control" id="inputCognomePers" />
                                </div>
                            </div>
                            <div class="col-md-2 col-lg-3">
                                <div class="form-group">
                                    <label class="control-label">DATA DI NASCITA</label>
                                    <div class="input-group date">
                                        <input class="form-control" type="date" />
                                        <span class="input-group-append">
                                            <button class="btn btn-outline-secondary" type="button">
                                                <i class="fa fa-calendar"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 col-lg-4">
                                <div class="form-group">
                                    <label class="control-label">EMAIL</label>
                                    <input type="email" class="form-control" id="inputEmailPart"  />
                                </div>
                            </div>
                            <div class="col-md-2 col-lg-3">
                                <div class="form-group">
                                    <label class="control-label">TELEFONO</label>
                                    <input type="tel" class="form-control" id="inputTelPart" />
                                </div>
                            </div>

                            <div class="col-md-2 col-lg-3">
                                <div class="form-group">
                                    <label class="control-label">CITTÀ</label>
                                    <input type="text" class="form-control" id="inputCittaPart"  />
                                </div>
                            </div>


                            <div class="col-md-3 col-lg-2">
                                <div class="form-group">
                                    <label class="control-label">CAP</label>
                                    <input type="text" class="form-control" id="inputCapPart" style="background-color:dimgrey" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 col-lg-4">
                                <div class="form-group">
                                    <label class="control-label">TIPO DIPLOMA</label>
                                    <input type="text" class="form-control" id="inputTipoDiplo" />
                                </div>
                            </div>
                            <div class="col-md-2 col-lg-3">
                                <div class="form-group">
                                    <label class="control-label">DATA DIPLOMA</label>
                                    <input type="date" class="form-control" id="inputDataDiplo"  />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="card card-default">
                <div class="card-header">
                    <h4 class="card-title">
                        <a data-toggle="collapse" data-parent="#accordion">
                            <i class="glyphicon glyphicon-lock text-gold"></i>
                            <b>SEZIONE SUPPLEMENTARE</b>
                        </a>
                    </h4>
                </div>
            </div>
            <br />
        </div>


        <div class="row">
            <div class="col-lg-12">
                <div class="pull-right">
                    <button type="submit" class="btn btn-success btn-lg" id="btnSubmit"><i class="fa fa-save"></i> Salva</button>
                    <a class="btn btn-warning btn-lg" href="#" id="btnToTop"><i class="fa fa-arrow-left" href="operatori"></i> Indietro</a>
                </div>
            </div>
        </div>
    </div>
</EditForm>


